{
  "name": "shopify-app-fullstack",
  "version": "1.0.0",
  "description": "Shopify Public App with React and Express",
  "main": "server.js",
  "scripts": {
    "build": "npm run build --prefix client",
    "start": "npm run build --prefix client && npm run server",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "install-all": "npm install && npm install --prefix client"
    },
  "dependencies": {
    "@shopify/shopify-api": "^11.0.0",
    "@shopify/shopify-app-session-storage-sqlite": "^4.0.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.0"
  }
}